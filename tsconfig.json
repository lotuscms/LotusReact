{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": false,
    "charset": "UTF-8",
    "sourceMap": true,
    "jsx": "preserve",
    "outDir": "./build/",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "src/**/*.json",
    "src/testData.js"
  ]
}
